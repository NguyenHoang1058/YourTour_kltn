@model YourTour.Models.Commands.LocationCommand
@{
    ViewData["Title"] = "AddLocation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{<h1 style = "text-align:center;color:brown;text-transform:uppercase" > Thêm địa điểm du lịch mới</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("AddLocation", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tendiadiem" class="control-label">Tên địa điểm</label>
                <input name="Tendiadiem" class="form-control" />
                <span asp-validation-for="Tendiadiem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mota" class="control-label">Mô tả</label>
                <input name="Mota" class="form-control" />
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MienID" class="control-label">Tên miền</label>
                <select asp-for="MienID" class="form-control" name="MienID" asp-items="new SelectList(@Model.Tendiadiem, @Model.ID.ToString())">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm địa điểm du lịch mới" class="btn btn-primary" />
            </div>
        }
    </div>
</div> 
}