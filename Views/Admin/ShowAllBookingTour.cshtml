@{
}
@model IEnumerable<YourTour.Models.ViewModels.CommonViewModel>;
@{
    ViewData["Title"] = "ShowAllBookingTour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1 style="color:brown;text-align:center">Danh sách tour đã đặt</h1>

<input id="myInput" type="text" placeholder="Search..">
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hoadoncode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngaylaphd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thuocmien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tongtien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ptthanhtoan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tinhtrang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hoten)
            </th>
        </tr>
    </thead>
    <tbody id="myTable">
        @await Component.InvokeAsync("BookingTourMienNam")
        @await Component.InvokeAsync("BookingTourMienBac")
        @await Component.InvokeAsync("BookingTourMienTrung")
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    setTimeout(function () {
        location.reload();
    }, 5000);
</script>