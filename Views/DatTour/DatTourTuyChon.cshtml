@{
}
@{
    ViewData["Title"] = "TourTuyChon";
    Layout = "~/Views/Shared/_LayoutTour.cshtml";

}
@model YourTour.Models.ViewModels.TourTuyChonViewModel;
<div class="container py-lg-5 py-sm-4">
    <h4 class="text-uppercase" style="color:red" ; text-align:center>thông tin liên lạc</h4>
    @using (Html.BeginForm("DatTourTuyChon", "DatTour", FormMethod.Post, new { @class = "row" }))
    {
        <div class="col-sm-6 form-group contact-forms">
            @Html.TextBox("TenKH", "", new { @class = "form-control", @placeholder = "Họ và tên" })
            @Html.ValidationMessage("TenKH", "", new { @style = "color:red;" })
        </div>
        <div class="col-sm-6 form-group contact-forms">
            @Html.TextBox("Email", "", new { @class = "form-control", @placeholder = "Email" })
            @Html.ValidationMessage("Email", "", new { @style = "color:red;" })
        </div>
        <div class="col-sm-6 form-group contact-forms">
            @Html.TextBox("Sdt", "", new { @class = "form-control", @placeholder = "Số điện thoại" })
            @Html.ValidationMessage("Sdt", "", new { @style = "color:red;" })
        </div>
        <div class="col-sm-6 form-group contact-forms">
            @Html.TextBox("Mien", "", new { @class = "form-control", @placeholder = "Miền" })
            @Html.ValidationMessage("Mien", "", new { @style = "color:red;" })
        </div>
        <div class="col-sm-6 form-group contact-forms">
            @Html.TextBox("Songuoidi", "", new { @class = "form-control", @placeholder = "Số người đi" })
            @Html.ValidationMessage("Songuoidi", "", new { @style = "color:red;" })
        </div>
        <div class="col-sm-6 form-group contact-forms">
            <input type="date" name="Ngaykhoihanh" class="form-control" placeholder="Ngày khách muốn đi" />
        </div>
        <div class="col-sm-6 form-group contact-forms">
            @Html.TextArea("Ghichu", "", new { @class = "form-control", @placeholder = "Ghi chú" })
            @Html.ValidationMessage("Ghichu", "", new { @style = "color:red;" })
        </div>
        <br />
        <div class="col-md-12 booking-button">
            <button type="submit" class="btn btn-block sent-butnn" id="btnSubmit">Gửi</button>
        </div>
    }

</div>
        