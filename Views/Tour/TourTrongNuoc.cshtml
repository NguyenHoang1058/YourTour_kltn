@{
}
@model IEnumerable<YourTour.Models.ViewModels.TourViewModel>
@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutTour.cshtml";
}
<div class="container py-lg-4 py-sm-3">
    <h2 class="heading text-capitalize text-center"> Khám phá các Tour du lịch của chúng tôi</h2>
    <br />
    @*@await Html.PartialAsync("/Views/Tour/FindTourPartial.cshtml")*@
    <br />
    <br />
    <br />
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6 mb-5">
                <div class="image-tour position-relative">
                    <a href="@Url.Action("ThongTinChiTietTour","Tour", new { @id = item.ID})">
                        <img src="@Url.Content("/images/tour_images/"+item.Hinhanh)" alt="" class="img-fluid">
                        <p><span class="fa fa-tags"></span> <span>@item.Gianguoilon.ToString("#,##")</span></p>
                    </a>
                </div>
                <div class="package-info">
                    <h6 class="mt-1"><span class="fa fa-map-marker mr-2"></span>@item.Tentour</h6>
                    <h5 class="my-2">@item.Code</h5>
                    <p class="">@item.Mota</p>
                    <ul class="listing mt-3">
                        <li><span class="fa fa-clock-o mr-2"></span><span>@item.Thoigiandi Ngày</span></li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>