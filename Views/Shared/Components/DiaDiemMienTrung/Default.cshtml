@{
}
@model IEnumerable<YourTour.Models.ViewModels.DiadiemViewModel>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 col-6 destinations-grids text-center">
            <div class="image-position position-relative">
                <a href="@Url.Action("KhachSanThuocDiaDiem","KhachSan", new { @id = item.ID})">
                    <img src="@Url.Content("/images/diadiem/"+item.Hinhanh)" alt="" class="img-fluid">
                    <p><span class="text-uppercase"><b>@item.Tendiadiem</b></span></p>
                </a>
            </div>
        </div>
    }

</div>