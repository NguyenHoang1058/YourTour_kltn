                            <li class="active"><a href="@Url.Action("DatTourTuyChon","DatTour")">Du lịch tự chọn</a></li>
                        </ul>
                    </li>
                    <li class="active"><a href="https://tripu.vn/vi/hotels">Khách sạn</a></li>
                    <li class="active">
                        <a href="https://www.worldtrans.vn/">Vận chuyển</a>
                        <ul class="menu ml-auto mt-0 overlay-inner">
                            <li class="active"><a href="http://car4rent.com/">Thuê xe</a></li>
                            <li class="active"><a href="https://www.worldtrans.vn/">Vé máy bay</a></li>
                        </ul>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("TinTuc","Home")">Tin tức</a>
                        <ul class="menu ml-auto mt-0 overlay-inner">
                            <li class="active"><a href="@Url.Action("TinTuc","Home")">Tin tức</a></li>
                            <li class="active" style="width:auto"><a href="@Url.Action("KinhNghiemDuLich","Home")">Kinh nghiệm du lịch</a></li>
                        </ul>
                    </li>
                    <li class="active">
                        <a href="#">Khuyến mãi</a>
                        <ul class="menu ml-auto mt-0 overlay-inner">
                            <li class="active"><a href="#">Ưu đãi One Pay</a></li>
                            <li class="active"><a href="#">Ưu đãi Viettin Bank</a></li>
                        </ul>
                    </li>
                    <li class="active"><a href="@Url.Action("LienHe","Home")">Liên hệ</a></li>
                </ul>
            </nav>
