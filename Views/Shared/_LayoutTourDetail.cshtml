<body>
    <div class="pagination justify-content-end" style="margin:20px 0 0 0">
        <form method="post" action="@Url.Action("TimTour","Home")">
            <input type="text" name="diemDen" placeholder="Điểm đến ..." style="border:none" />
            <button type="submit" style="border:none" class="btn btn-light fa fa-search"></button>
        </form>
    </div>
    <!-- header -->
    <header>
        <div class="container">
            <!-- nav -->
            <nav class="py-md-4 py-3 d-lg-flex">
