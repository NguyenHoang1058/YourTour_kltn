                    <h1 class="mt-md-0 mt-2"> <a href="@Url.Action("Index","Home")"><span class="fa fa-map-signs"></span> Tenlua Travel </a></h1>
                    <h6 class="mt-md-0 mt-2"><a href="#"><span>Be An Adventurer</span></a></h6>
                </div>
                <label for="drop" class="toggle"><span class="fa fa-bars"></span></label>
                <input type="checkbox" id="drop" />
                <ul class="menu ml-auto mt-1" id="main-menu">
                    <li class="active"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                    <li class="active">
                        <a href="@Url.Action("TourTrongNuoc","Tour")">Du lịch</a>
                        <ul class="menu ml-auto mt-0 overlay-inner">
                            <li class="active"><a href="@Url.Action("ShowAllTourMienBac","Tour")">Du lịch miền Bắc</a></li>
                            <li class="active"><a href="@Url.Action("ShowAllTourMienTrung","Tour")">Du lịch miền Trung</a></li>
