        </div>
    </header>
    <!-- //header -->
    <!-- banner -->
    <section class="banner_inner" id="home">
        <div class="banner_inner_overlay">
        </div>
    </section>
    <!-- //banner -->
    <!-- tour packages -->
    <section class="packages pt-5">
        @RenderBody()
        <!--social-->
        <div class="overlay-1">
            <div class="icon-bar">
                <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                <a href="#" class="messenger"><i class="fab fa-facebook-messenger"></i></a>
            </div>
        </div>
    </section>
    <!-- tour packages -->
    <!--footer -->
    <footer>
        <section class="footer footer_w3layouts_section_1its py-5">
            <div class="container py-lg-4 py-3">
                <div class="row footer-top">
                    <div class="col-lg-4 col-sm-6 footer-grid_section_1its_w3">
                        <div class="footer-title">
                            <h3>Địa chỉ</h3>
                        </div>
                        <div class="footer-text">
                            <p>Công ty CP Du lịch và Tiếp thị GTVT Tên Lửa Travel</p>
                            <p>Location : 12 Nguyễn Văn Bảo, phường 4, quận Gò Vấp</p>
                            <p>Phone : +84 369052254</p>
                            <p>Email : <a href="mailto:tenluatravel.services@gmail.com">tenluatravel.services@gmail.com</a></p>
                        </div>
                    </div>
