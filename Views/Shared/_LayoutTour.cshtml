            <nav class="py-md-4 py-3 d-lg-flex">
                <div id="logo">
                    <h1 class="mt-md-0 mt-2"> <a href="@Url.Action("Index","Home")"><span class="fa fa-map-signs"></span> Tenlua Travel </a></h1>
                    <h6 class="mt-md-0 mt-2"><a href="#"><span>Be An Adventurer</span></a></h6>
                </div>
                <label for="drop" class="toggle"><span class="fa fa-bars"></span></label>
                <input type="checkbox" id="drop" />
                <ul class="menu ml-auto mt-1">
                    <li class="active"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                    <li class="active">
                        <a href="@Url.Action("TourTrongNuoc","Tour")">Du lịch trong nước</a>
                        <ul class="menu ml-auto mt-1 overlay-inner">
                            <li class="active"><a href="@Url.Action("ShowAllTourMienBac","Tour")" style="color:orange">Du lịch miền Bắc</a></li>
                            <li class="active"><a href="@Url.Action("ShowAllTourMienTrung","Tour")" style="color:orange">Du lịch miền Trung</a></li>
                            <li class="active"><a href="@Url.Action("ShowAllTourMienNam","Tour")" style="color:orange">Du lịch miền Nam</a></li>
                        </ul>
                    </li>
                    <li class="active"><a href="@Url.Action("National","Tour")">Du lịch nước ngoài</a></li>
                    <li class="active"><a href="@Url.Action("DatTourTuyChon","DatTour")">Du lịch tùy chọn</a></li>
                </ul>
            </nav>
